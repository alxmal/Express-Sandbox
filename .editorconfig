# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
indent_brace_style = GNU
quote_type = single
insert_final_newline = true
max_line_length = 100
tab_width = 4
trim_trailing_whitespace = true
spaces_around_brackets = inside

[{package.json,*.yml}]
indent_style = space
indent_size = 2
